@using BilisimOfisiTicariOtomasyon.Models.Sınıflar
@model List<KargoTakip>
@{
    ViewBag.Title = "CariKargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>Adım</th>
        <th>Açıklama</th>
        <th>Tarih</th>
    </tr>
    @{ int i = 0;}
    @foreach (var x in Model)
    {
<tr>
    <td>@{ i++;} @i.</td>
    <td>@x.kargoTakipAciklama</td>
    <td>@x.kargoTakipTarih</td>
</tr>
    }
</table>


